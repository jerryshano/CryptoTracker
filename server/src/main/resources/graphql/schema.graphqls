type Query {
    availableCurrencies : [Currency]
    allUsers : [User]
    findUser(userId: String!) : User
    daily(currency : String!) : String
    news(currencies : [String]) : [News]
}

type Currency {
    id : String!
    name : String
}

type User {
    user : String!
    currencies : [String]
}

type Mutation {
    addUser(user: String!, currencies: [String]): String
}

type News {
    title : String
    url : String
    summary : String
    imageUrl : String
    source : String
}
